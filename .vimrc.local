let g:hardtime_default_on = 0
colorscheme desert
set mouse=""
hi CursorLine term=bold cterm=bold guibg=Grey40


function! RunShebang()
  if (match(getline(1), '^\#!') == 0)
    :!./%
  else
    echo "No shebang in this file."
  endif
endfunction
map \e :call RunShebang()<CR>

